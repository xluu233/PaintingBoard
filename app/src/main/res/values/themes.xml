<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PaintingBoard" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@color/teal_700</item>
        <item name="textAllCaps">false</item>
    </style>


    <!--背景透明的dialog-->
    <style name="DialogTheme" parent="android:Animation">
        <!-- Dialog以外的区域遮盖效果 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--dialog动画：中心渐入-->
    <style name="dialogAnimation_center">
        <item name="android:windowEnterAnimation">@anim/dialog_in_center</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_center</item>
    </style>

    <!--dialog动画：底部进入-->
    <style name="dialogAnimation_bottom">
        <item name="android:windowEnterAnimation">@anim/dialog_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_bottom</item>
    </style>


    <style name="commonText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="commonText2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="commonButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="minWidth">100dp</item>
        <item name="android:background">@drawable/back_button</item>
        <item name="android:gravity">center</item>
        <item name="elevation">2dp</item>
    </style>

</resources>